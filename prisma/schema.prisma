// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Arquivo CSV importado
model UploadedFile {
  id           String   @id @default(uuid())
  fileName     String
  uploadDate   DateTime @default(now())
  dataHash     String   @unique

  // Dados do CSV em formato JSONB
  // Estrutura: { headers: string[], rows: Record<string, string>[] }
  data         Json

  // Metadados para consultas rápidas
  rowCount     Int
  anos         String[] // Anos encontrados neste arquivo
  modalidades  String[] // Modalidades encontradas
  turmas       String[] // Turmas encontradas

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([dataHash])
  @@index([uploadDate])
  @@index([anos])
  @@index([modalidades])
}

// Edições granulares de campos de alunos
// Cada registro representa uma edição individual de um campo específico
model AlunoEdit {
  id             String   @id @default(uuid())
  matricula      String   // Número de matrícula do aluno (referência)
  campo          String   // Nome do campo editado (ex: "NOME_COMPL", "CPF", "RG_NUM")
  valorOriginal  String?  // Valor original do CSV (null se campo não existia)
  valorEditado   String   // Novo valor após edição
  motivo         String?  // Motivo da edição (opcional)
  editadoPor     String?  // Usuário que fez a edição (opcional por enquanto)
  editadoEm      DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([matricula])
  @@index([editadoEm])
  @@index([matricula, campo]) // Para buscar edições de um campo específico de um aluno
}
